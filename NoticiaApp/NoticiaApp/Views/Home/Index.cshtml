@{
    ViewBag.Title = "Home Page";
}

@model IEnumerable<NoticiaApp.Models.Noticia>

 <!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-image: url('/Content/img/home-bg.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>Noticias</h1>
                    <hr class="small">
                    <span class="subheading">Um simples site que mostra o mundo</span>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                @foreach (var item in Model)
                {

                    <div class="post-preview">
                        <a href="post.html">
                            <h2 class="post-title">
                                @Html.DisplayFor(modelItem => item.Titulo)
                            </h2>
                            <h3 class="post-subtitle">
                                @Html.DisplayFor(modelItem => item.SubTitulo)
                            </h3>
                        </a>
                        <p class="post-meta"><a href="@Html.DisplayFor(modelItem => item.Meta)">Fonte. </a>
                        Postado em @Html.DisplayFor(modelItem => item.DataCreated.Day)/@Html.DisplayFor(modelItem => item.DataCreated.Month)/@Html.DisplayFor(modelItem => item.DataCreated.Year) às @Html.DisplayFor(modelItem => item.DataCreated.Hour):@Html.DisplayFor(modelItem => item.DataCreated.Minute)</p>
                    </div>
                    <hr>
                }
        </div>
    </div>
</div>