@model IEnumerable<NoticiaApp.Models.Noticia>

@{
    ViewBag.Title = "Index";
}

<h2>Noticias</h2>

<p>
    @Html.ActionLink("Criar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubTitulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Meta)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SubTitulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Meta)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new { @style="font-size: 0.8em;" }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @style = "font-size: 0.8em;" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @style = "font-size: 0.8em;" })
        </td>
    </tr>
}

</table>
